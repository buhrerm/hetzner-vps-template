# Application Configuration
APP_NAME=myapp
DOMAIN=example.com

# Repository Names (as they appear in /opt/)
BACKEND_REPO_NAME=MyAppBackend
FRONTEND_REPO_NAME=MyAppFrontend

# GitHub Configuration
GITHUB_USERNAME=yourusername
GITHUB_WEBHOOK_SECRET=generate-a-secure-random-string-here

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=myapp
DB_USER=myapp
DB_PASSWORD=generate-a-secure-password-here
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Cache
REDIS_URL=redis://cache:6379

# API Configuration
API_URL=https://${DOMAIN}/graphql
WS_URL=wss://${DOMAIN}/graphql
JWT_SECRET=generate-a-secure-jwt-secret-here
REFRESH_TOKEN_SECRET=generate-another-secure-secret-here

# Frontend Configuration
NEXT_PUBLIC_API_URL=https://${DOMAIN}/graphql
NEXT_PUBLIC_WS_URL=wss://${DOMAIN}/graphql
NEXTAUTH_URL=https://${DOMAIN}
NEXTAUTH_SECRET=generate-a-secure-nextauth-secret-here

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=noreply@${DOMAIN}

# S3/Storage Configuration (optional)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=myapp-uploads
S3_ACCESS_KEY_ID=your-access-key
S3_SECRET_ACCESS_KEY=your-secret-key

# Monitoring (optional)
SENTRY_DSN=
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com

# Environment
NODE_ENV=production
LOG_LEVEL=info